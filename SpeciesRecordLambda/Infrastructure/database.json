{

  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "Dynamo DB table for spider records and a stream for processing them later",

  "Parameters": {
  },

  "Resources": {

    "SpiderMapsDynamo": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "SpiderMapsDynamo",
        "AttributeDefinitions": [
          {
            "AttributeName": "Guid",
            "AttributeType": "S"
          },
          {
            "AttributeName": "User",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "Guid",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "User",
            "KeyType": "RANGE"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 5,
          "WriteCapacityUnits": 5
        },
        "StreamSpecification": {
          "StreamViewType": "NEW_IMAGE"
        }
      }
    }
  },

  "Outputs": {
    "DyanmoDBName": {
      "Description": "Name of the database",
      "Value": { "Ref": "SpiderMapsDynamo" },
      "Export": {
        "Name": {
          "Fn::Join": [
            ":",
            [
              { "Ref": "AWS::StackName" },
              "DynamoDBName"
            ]
          ]
        }
      }
    },

    "DynamoDBArn": {
      "Description": "Arn of the database",
      "Value": {
        "Fn::GetAtt": [ "SpiderMapsDynamo", "Arn" ]
      },
      "Export": {
        "Name": {
          "Fn::Join": [
            ":",
            [
              { "Ref": "AWS::StackName" },
              "DynamoDBArn"
            ]
          ]
        }
      }
    },

    "DynamoDBStreamArn": {
      "Description": "Arn of the stream",
      "Value": {
        "Fn::GetAtt": [ "SpiderMapsDynamo", "StreamArn" ]
      },
      "Export": {
        "Name": {
          "Fn::Join": [
            ":",
            [
              { "Ref": "AWS::StackName" },
              "DynamoStreamArn"
            ]
          ]
        }
      }
    }
  }
}
